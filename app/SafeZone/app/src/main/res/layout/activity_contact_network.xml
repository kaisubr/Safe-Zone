<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContactNetwork">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:gravity="center"
    >
        <giwi.org.networkgraph.GraphSurfaceView
                android:id="@+id/mysurface"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:nodeBgColor="@android:color/white"
                app:defaultColor="@android:color/black"
                app:edgeColor="@android:color/holo_orange_dark"
                app:nodeColor="@android:color/darker_gray"
                android:layout_margin="10dp"/>
        <Button
                android:text="Predict life insurance\nclaim response"
                android:backgroundTint="#FADDB4"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="0dp" android:id="@+id/buttonRiskAnalysis" android:layout_weight="1"/>

        <TextView android:layout_width="match_parent" android:layout_height="120dp"
                  android:text="Claim risk unknown."
                  android:id="@+id/textViewResponseHighIsBetter"
                  android:gravity="center" android:padding="10dp" android:textSize="16sp" android:textColor="#3E3E3E"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="25dp"></RelativeLayout>
    </LinearLayout>




</RelativeLayout>